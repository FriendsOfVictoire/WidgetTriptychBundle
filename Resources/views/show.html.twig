{% extends 'VictoireCoreBundle:Widget:show.html.twig' %}

{% macro tryptichCol(col) %}
    <div class="col-md-4">
        <h2 class="text-center">
            {{ col.title }}
        </h2>
        <h4 class="text-center">
            {{ col.subtitle }}
        </h4>
        <a href="{{ col.link }}">
            <img src="{{ asset(col.background.path) }}">
        </a>
    </div>
{% endmacro %}

{% block content %}
<div class="row">
    {{ _self.tryptichCol(colLeft) }}
    {{ _self.tryptichCol(colMiddle) }}
    {{ _self.tryptichCol(colRight) }}
</div>
{% endblock content %}
